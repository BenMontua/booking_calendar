<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Buchungskalender</title>
  <style>
    body { 
      font-family: sans-serif; 
      margin: 0; 
      padding: 0; 
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      background: #f9f9f9;
    }
    #calendar {
      width: 90vw;
      max-width: 90vw;
      max-height: 90vh;
      margin: 40px 0;
    }
    .fc-multimonth {
      width: 100% !important;
    }
    .form-overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }
    .form-container {
      background: white;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 8px;
      width: 90%;
      max-width: 600px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
      position: relative;
    }
    .form-group { margin-bottom: 10px; }
    label { display: block; margin-bottom: 4px; }
    input, select { width: 100%; padding: 6px; }
    button { padding: 10px 15px; background: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; }
    .close-button {
      position: absolute;
      top: 10px;
      right: 10px;
      background: #a28c89;
      color: #fff;
      border: none;
      border-radius: 50%;
      width: 32px;
      height: 32px;
      font-size: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
      transition: background 0.2s;
      padding: 0;
    }
    .close-button:hover {
      background: #c0392b;
    }
    .fc-event-title,
    .fc-event .fc-event-title {
      text-align: center;
      width: 100%;
      display: block;
    }
  </style>
</head>
<body>
  <div id='calendar'></div>

  <div id="formOverlay" class="form-overlay" style="display: none;">
    <div class="form-container" id="bookingForm">
      <button class="close-button" onclick="closeForm()">&times;</button>
      <h3>Buchung erstellen</h3>
      <div class="form-group">
        <label for="name">Vorname + Nachname</label>
        <input type="text" id="name" />
      </div>
      <div class="form-group">
        <label for="email">E-Mail</label>
        <input type="email" id="email" required onblur="validateEmail()" oninput="validateEmail()" />
        <span id="emailError" style="color:#c00; font-size:0.9em; display:none;"></span>
      </div>
      <div class="form-group">
      <!--  
        <label for="category">Kategorie</label>
        <select id="category" onchange="calculatePrice()">
          <option>Standard</option>
          <option>Mit Haustier</option>
        </select>
      -->
        <!-- Kategorie Dropdown entfernt, Standard wird gesetzt -->
        <input type="hidden" id="category" value="Standard" />

      </div>
      <div class="form-group">
        <label for="guests">Anzahl Personen</label>
        <input type="number" id="guests" value="1" min="1" max="6" onchange="calculatePrice()" />
      </div>
      <div class="form-group">
        <label style="display: inline-flex; align-items: center; gap: 8px; white-space: nowrap;">
          Wir bringen auch Haustiere mit
          <input type="checkbox" id="optionHaustiere" onchange="calculatePrice()" style="margin:0;" />
        </label>
        <p style="font-size: 0.8em;">Maximal sind 2 Hunde erlaubt - für Ausnahmen sprecht uns gerne separat an</p>
      </div>
      <div class="form-group">
        <label for="start">Startdatum</label>
        <input type="date" id="start" readonly
          onfocus="this.removeAttribute('readonly');"
          onblur="this.setAttribute('readonly','');"
          onchange="onDateInputChange()" />
      </div>
      <div class="form-group">
        <label for="end">Enddatum</label>
        <input type="date" id="end" readonly
          onfocus="this.removeAttribute('readonly');"
          onblur="this.setAttribute('readonly','');"
          onchange="onDateInputChange()" />
      </div>
      <p id="bettwaescheSum"></p>
      <p>Endreinigung: 100€</p>
      <p id="rabattInfo" style="color:#28a745; font-weight:bold; display:none;"></p>
      <p id="totalPrice"></p>
      <button onclick="submitBooking()">Buchung anfragen</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.18/index.global.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    let startDate, endDate;
    const FIXKOSTEN = { reinigung: 100, bettwaesche: 15, proPerson: 0 };

    const calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
      selectable: true,
      initialView: 'multiMonthYear',
      multiMonthMaxColumns: 1, // force a single column
      locale: 'de',
      firstDay: 1, // Montag als erster Tag
      headerToolbar: {
        left: 'prev,next heute',
        center: 'title',
        right: ''
      },
      customButtons: {
        heute: {
          text: 'Heute',
          click: function() {
            calendar.today();
            setTimeout(scrollToCurrentMonth, 50);
          }
        }
      },
      views: {
        multiMonth: {
          type: 'multiMonthYear',
          multiMonthMaxColumns: 1, // force a single column
          direction: 'vertical'    // Vertikales Scrollen
        }
      },
      eventContent: function(arg) {
        return { html: arg.event.title };
      },
      events: async function(fetchInfo, successCallback, failureCallback) {
        try {
          const [eventsRes, pricesRes] = await Promise.all([
            axios.get('/api/events'),
            axios.get('/api/prices')
          ]);
          const events = eventsRes.data;

          // Enddatum für die Darstellung im Kalender um 1 Tag erhöhen
          const eventsWithAdjustedEnd = events.map(ev => ({
            ...ev,
            end: ev.end ? new Date(new Date(ev.end).getTime() + 86400000).toISOString().slice(0, 10) : ev.end
          }));

          // Alle belegten Tage sammeln (YYYY-MM-DD)
          const bookedDays = new Set();
          events.forEach(ev => {
            const start = new Date(ev.start);
            const end = new Date(ev.end || ev.start);
            for (
              let d = new Date(start);
              d < end; // nur bis einen Tag vor end
              d.setDate(d.getDate() + 1)
            ) {
              bookedDays.add(d.toISOString().slice(0, 10));
            }
          });

          // Preise nur für freie Tage anzeigen
          const priceEvents = pricesRes.data.filter(price => {
            // Prüfe, ob der Preiszeitraum mit einem belegten Tag kollidiert
            const start = new Date(price.start);
            const end = new Date(price.end || price.start);
            for (
              let d = new Date(start);
              d <= end;
              d.setDate(d.getDate() + 1)
            ) {
              if (bookedDays.has(d.toISOString().slice(0, 10))) return false;
            }
            return true;
          }).map(price => {
            let preisText = "";
            let kategorieText = "";
            if (price.extendedProps && price.extendedProps.price && price.extendedProps.priceCategory) {
              preisText = price.extendedProps.price;
              kategorieText = price.extendedProps.priceCategory === 'Category2' ? "Mit Haustier" : "Standard";
            }
            return {
              title: `${preisText} / Tag`,
              start: price.start,
              end: price.end,
              backgroundColor: price.backgroundColor,
              borderColor: price.backgroundColor
            };
          });

          successCallback([...eventsWithAdjustedEnd, ...priceEvents]);
        } catch (err) {
          failureCallback(err);
        }
      },
      select: function(info) {
        startDate = info.startStr;
        endDate = info.endStr;

        const start = new Date(startDate);
        const end = new Date(endDate);
        const diffDays = (end - start) / (1000 * 60 * 60 * 24);

        if (startDate === endDate || diffDays <= 1) {
          alert('Bitte wähle mindestens 2 Tage (=1 Nacht) für eine Buchung aus.');
          return;
        }

        // Prüfe, ob die Auswahl mit bestehenden Events kollidiert
        axios.get('/api/events').then(res => {
          const events = res.data;
          const bookedDays = new Set();
          events.forEach(ev => {
            const start = new Date(ev.start);
            const end = new Date(ev.end || ev.start);
            for (
              let d = new Date(start);
              d < end;
              d.setDate(d.getDate() + 1)
            ) {
              bookedDays.add(d.toISOString().slice(0, 10));
            }
          });

          // Prüfe, ob die Auswahl mit mehr als einem Tag überlappt
          let overlapCount = 0;
          let d = new Date(startDate);
          const endD = new Date(endDate);
          while (d < endD) {
            if (bookedDays.has(d.toISOString().slice(0, 10))) overlapCount++;
            d.setDate(d.getDate() + 1);
          }
          if (overlapCount > 1) {
            alert('Die Auswahl überschneidet sich mit bestehenden Buchungen an mehr als einem Tag.');
            return;
          }

          // Prüfe, ob für alle Tage ein Preis gesetzt ist
          axios.get('/api/prices').then(priceRes => {
            const prices = priceRes.data;
            let d = new Date(startDate);
            const endD = new Date(endDate);
            let allDaysHavePrice = true;
            while (d < endD) {
              const dateStr = d.toISOString().slice(0, 10);
              const priceForDay = prices.find(p => p.start === dateStr && p.extendedProps.priceCategory === 'Category1');
              if (!priceForDay) {
                allDaysHavePrice = false;
                break;
              }
              d.setDate(d.getDate() + 1);
            }
            if (!allDaysHavePrice) {
              alert('Es ist nicht für alle Tage ein Preis vorhanden, Du kannst nur Zeiträume buchen, für die ein Preis vorliegt.');
              return;
            }
            // Dialog öffnen
            document.getElementById('start').value = startDate;
            document.getElementById('end').value = new Date(new Date(endDate).getTime() - 86400000).toISOString().slice(0, 10);
            document.getElementById('formOverlay').style.display = 'flex';
            calculatePrice();
          });
        });
      }
    });
    calendar.render();

    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') closeForm();
    });

    document.getElementById('formOverlay').addEventListener('click', function(event) {
      if (event.target.id === 'formOverlay') closeForm();
    });

    async function calculatePrice() {
      var category = document.getElementById('category').value;
      if(category === 'Standard') category = 'Category1';
      else if(category === 'Mit Haustier') category = 'Category2';
      category = "Category1"; // Immer Standard als Kategorie

      const guests = parseInt(document.getElementById('guests').value);
      const haustiere= document.getElementById('optionHaustiere').checked;
      if (!startDate || !endDate) return;

      try {
        const priceRes = await axios.get('/api/prices');
        const days = getDateRange(new Date(startDate), new Date(endDate));
        let sum = 0;
        let minNights = 2;
        for (const day of days) {
          const entry = priceRes.data.find(p => p.start === day && p.extendedProps.priceCategory && p.extendedProps.priceCategory.startsWith(category));
          if (entry) {
            let priceStr = entry.extendedProps.price.replace('€', '').trim();
            let base = parseFloat(priceStr);
            if(haustiere) base *= 1.05; // 5% Aufschlag für Haustier
            if(minNights < entry.extendedProps.minNights) {
              minNights = entry.extendedProps.minNights;
            }
            sum += base;
          }
        }
        if (days.length < minNights) {
          alert(`Die Mindestanzahl für diesen Zeitraum beträgt ${minNights} Nächte. Bitte wähle einen längeren Zeitraum aus.`);
          closeForm(); // Dialog schließen
          return;
        }
        sum += FIXKOSTEN.reinigung;
        const bettwaescheSum = FIXKOSTEN.bettwaesche * guests;
        sum += bettwaescheSum;
        sum += FIXKOSTEN.proPerson * guests;

        // Rabatt: 10% ab 7 Nächten
        let rabatt = 0;
        if (days.length > 6) {
          rabatt = sum * 0.1;
          sum = sum * 0.9;
        }

        // Bettwäsche-Summe anzeigen
        const bettwaescheSumElem = document.getElementById('bettwaescheSum');
        if (bettwaescheSumElem) {
          bettwaescheSumElem.innerText = `Bettwäsche + Kurtaxe (p. P. 15€) - Summe: ${bettwaescheSum.toFixed(2)} €`;
        }

        // Rabatt anzeigen
        const rabattElem = document.getElementById('rabattInfo');
        if (rabatt > 0) {
          rabattElem.style.display = 'block';
          rabattElem.innerHTML = `Rabatt für Langzeitbuchung (10%): -${rabatt.toFixed(2)} €`;
        } else {
          rabattElem.style.display = 'none';
          rabattElem.innerHTML = '';
        }

        document.getElementById('totalPrice').innerHTML = `<b>Gesamtpreis: ${sum.toFixed(2)} €</b>`;
      } catch (err) {
        console.error('Fehler bei Preisberechnung:', err);
      }
    }

    function validateEmail() {
      const emailInput = document.getElementById('email');
      const errorSpan = document.getElementById('emailError');
      const value = emailInput.value.trim();
      // Mindestens 2 Zeichen nach @, vor und nach dem Punkt
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!value) {
        errorSpan.style.display = 'block';
        errorSpan.innerText = 'Bitte gib eine E-Mail-Adresse an.';
        emailInput.style.borderColor = '#c00';
        return false;
      }
      if (!emailPattern.test(value)) {
        errorSpan.style.display = 'block';
        errorSpan.innerText = 'Bitte gib eine gültige E-Mail-Adresse ein';
        emailInput.style.borderColor = '#c00';
        return false;
      }
      errorSpan.style.display = 'none';
      emailInput.style.borderColor = '';
      return true;
    }

    async function submitBooking() {
      if (!validateEmail()) return;

      const data = {
        title: "Belegt",
        name: document.getElementById('name').value,
        email: document.getElementById('email').value,
        category: document.getElementById('category').value,
        guests: parseInt(document.getElementById('guests').value),
        has_pet: document.getElementById('optionHaustiere').checked,
        start_date: startDate,
        end_date: new Date(new Date(endDate).getTime() - 86400000).toISOString().slice(0, 10)
      };

      try {
        const payload = { ...data };
        delete payload.bettwaesche;

        const res = await axios.post('/api/events', payload);
        document.getElementById('totalPrice').innerText = `Gesamtpreis: ${res.data.total_price.toFixed(2)} €`;
        calendar.refetchEvents();
        document.getElementById('formOverlay').style.display = 'none';
      } catch (err) {
        alert('Fehler beim Buchen.');
        console.error(err);
      }
    }

    function getDateRange(start, end) {
      const dates = [];
      let current = new Date(start);
      current.setDate(current.getDate() + 1); // Startdatum um einen Tag erhöhen
      while (current < end) {
        dates.push(current.toISOString().slice(0, 10));
        current.setDate(current.getDate() + 1);
      }
      return dates;
    }

    function closeForm() {
      document.getElementById('formOverlay').style.display = 'none';
    }

    function onDateInputChange() {
      startDate = document.getElementById('start').value;
      endDate = document.getElementById('end').value;
      calculatePrice();
    }

    // Scroll-Funktion für aktuellen Monat
    function scrollToCurrentMonth() {
      const today = new Date();
      const monthName = today.toLocaleString('de-DE', { month: 'long' }).toLowerCase();
      const year = today.getFullYear();

      const monthEls = document.querySelectorAll('.fc-multimonth-month');
      for (const el of monthEls) {
        let header = el.querySelector('.fc-multimonth-title').textContent.trim().toLowerCase();
        if (!header && el.firstChild) header = el.firstChild;

        if (header === monthName) {
          el.scrollIntoView({ behavior: 'smooth', block: 'start' });
          break;
        }
      }
    }

    // Heute-Button nach Rendern abfangen und Scroll auslösen
    setTimeout(() => {
      const heuteBtn = document.querySelector('.fc-heute-button');
      if (heuteBtn) {
        heuteBtn.addEventListener('click', () => {
          setTimeout(scrollToCurrentMonth, 50);
        });
      }
    }, 100);
  </script>
</body>
</html>

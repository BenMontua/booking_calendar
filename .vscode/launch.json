    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch booking",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch backend",
            "type": "node",
            "request": "launch",
            "skipFiles": [
            "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js"
        }
        ],
        "compounds": [
        {
            "name": "Start frontend and backend",
            "configurations": [
            "Launch booking",
            "Launch backend"
            ]
        }
        ]
    ]
}